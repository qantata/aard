{
  "name": "server",
  "version": "0.1.3",
  "description": "",
  "author": "",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "pnpm fix-nexus-prisma && NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "p:generate": "dotenv -c development -- pnpx prisma generate",
    "p:migrate": "dotenv -c development -- pnpx prisma migrate dev --name init",
    "p:push": "dotenv -c development -- pnpx prisma db push",
    "p:seed": "dotenv -c development -- pnpx prisma db seed",
    "p:studio": "dotenv -c development -- pnpx prisma studio",
    "fix-nexus-prisma": "ts-node scripts/fix-nexus-prisma.ts",
    "fix-nexus-prisma-pkg": "PKG=true ts-node scripts/fix-nexus-prisma.ts"
  },
  "dependencies": {
    "@nestjs/common": "8.0.0",
    "@nestjs/config": "1.1.5",
    "@nestjs/core": "8.0.0",
    "@nestjs/graphql": "9.1.2",
    "@nestjs/platform-express": "8.0.0",
    "@prisma/client": "3.5.0",
    "@prisma/migrate": "3.5.0",
    "apollo-server-express": "3.5.0",
    "chokidar": "3.5.2",
    "dotenv": "10.0.0",
    "graphql": "15.8.0",
    "nexus": "1.1.0",
    "nexus-prisma": "0.35.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "8.0.0",
    "@nestjs/schematics": "8.0.0",
    "@nestjs/testing": "8.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "16.0.0",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "dotenv-cli": "4.1.1",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.2.5",
    "prettier": "2.3.2",
    "prisma": "3.5.0",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "27.0.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.0.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.5.4",
    "vite": "2.7.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
