{
  "name": "aard",
  "version": "0.0.0-development",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "delete-deps": "rm -rf apps/*/node_modules && rm -rf packages/*/node_modules"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.18.1",
    "turbo": "^1.0.9"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "turbo": {
    "baseBranch": "origin/master",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "tar": {
        "dependsOn": [
          "build"
        ]
      },
      "release": {
        "dependsOn": [
          "build",
          "tar"
        ]
      }
    }
  }
}
