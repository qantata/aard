datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

model Library {
  id     String  @id
  root   String
  movies Movie[]
}

model Movie {
  id        String  @id
  title     String
  year      Int?
  filepath  String
  library   Library @relation(fields: [libraryId], references: [id])
  libraryId String
}
